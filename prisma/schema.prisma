generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  nick      String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Promotion {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  price       Float
  expiresAt   DateTime
}
model Delation {
  id          Int      @id @default(autoincrement())
  title       String
  relator     String
  reason      String
  description String
  accused     String
  orgRelator  String
  orgAccused  String
  veredit     String   @default("none")
  staff       Boolean
  createdAt   DateTime @default(now())
}
